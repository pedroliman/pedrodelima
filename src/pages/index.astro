---
import BaseLayout from '../layouts/BaseLayout.astro';
import Button from '../components/Button.astro';
import Hero from '../components/Hero.astro';
import siteConfig from '../data/site-config';
import { publications } from '../data/publications';

// Filter publications to only show featured ones on the homepage
const featuredPublications = publications.filter((pub) => pub.featured);
---

<BaseLayout description={siteConfig.description} image={siteConfig.image}>
    <Hero />
    <div class="mb-8 sm:mb-12">
        <h2 class="mb-6 text-xl font-serif italic sm:mb-8 sm:text-2xl">Publications</h2>

        {
            featuredPublications.map((publication) => (
                <div class="publication-item mb-4 border-b border-main/20 pb-4">
                    <div class="publication-title font-medium mb-2">{publication.title}</div>
                    <div class="text-base mb-2 leading-relaxed">
                        <span class="italic">{publication.journal}</span> ({publication.year})
                        <div class="mt-2 text-sm flex gap-4">
                            {publication.doi && (
                                <a
                                    href={`https://doi.org/${publication.doi}`}
                                    target="_blank"
                                    rel="noopener noreferrer"
                                    class="text-main underline decoration-dashed hover:decoration-solid underline-offset-2 decoration-1"
                                >
                                    Full Paper
                                </a>
                            )}
                            {publication.code && (
                                <a
                                    href={publication.code}
                                    target="_blank"
                                    rel="noopener noreferrer"
                                    class="text-main underline decoration-dashed hover:decoration-solid underline-offset-2 decoration-1"
                                >
                                    Code
                                </a>
                            )}
                        </div>
                    </div>
                </div>
            ))
        }

        <div class="mt-6 sm:mt-8">
            <Button href="/research">View All Publications</Button>
        </div>
    </div>
</BaseLayout>
